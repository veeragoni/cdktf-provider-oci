{
  "compilerOptions": {
    "outDir": "lib",
    "rootDir": ".",
    "declaration": true,
    "declarationMap": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "alwaysStrict": true,
    "lib": ["es2020"],
    "module": "commonjs",
    "target": "es2020",
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "noEmitOnError": false,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts",
    "generated/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.spec.ts",
    "test/**/*"
  ]
}